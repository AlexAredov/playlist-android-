<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundcolor"
    tools:context=".RegistrActivity">

    <TextView
        android:id="@+id/txt_example3"
        android:layout_width="238dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="87dp"
        android:layout_marginTop="175dp"
        android:layout_marginEnd="86dp"
        android:shadowColor="@color/text_shadow_white"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="20"
        android:text="PlayList"
        android:textAlignment="center"
        android:textColor="@color/grey_font"
        android:textSize="50sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextTextPersonName3"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_below="@+id/txt_example3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="103dp"
        android:backgroundTint="@color/grey_font"
        android:ems="10"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:hint="Enter Name"
        android:inputType="textPersonName"
        android:textColor="@color/grey_font"
        android:textColorHint="@color/grey_font"
        android:textCursorDrawable="@color/grey_font" />

    <EditText
        android:id="@+id/editTextTextPersonName4"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_below="@+id/editTextTextPersonName"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="101dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="102dp"
        android:backgroundTint="@color/grey_font"
        android:ems="10"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:textColor="@color/grey_font"
        android:textColorHint="@color/grey_font"
        android:textCursorDrawable="@color/grey_font" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextTextPersonName4"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="160dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="158dp"
        android:text="Sign up"
        android:textColor="@color/black"
        app:backgroundTint="@color/grey_font"
        android:onClick="click"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="386dp"
        android:layout_height="188dp"
        android:layout_below="@+id/button"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="9dp"
        android:clickable="true"
        android:onClick="onClick"
        android:text="Have an account?"
        android:textAlignment="center"
        android:textColor="@color/grey_font" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_below="@+id/editTextTextPersonName3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="103dp"
        android:backgroundTint="@color/grey_font"
        android:ems="10"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:hint="Email"
        android:inputType="textPersonName"
        android:textColor="@color/grey_font"
        android:textColorHint="@color/grey_font"
        android:textCursorDrawable="@color/grey_font" />

</RelativeLayout>